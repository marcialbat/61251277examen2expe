<h1>New Order</h1>
<p> <em> Ingrese los datos necesarios: </em> </p>

<% if @order.errors.any? %>
  <div>
    Por favor corrija los siguientes problemas:
    <ul>
      <% @order.errors.full_messages.each do |m| %>
        <li>
          <%= m %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [@book, @order] do |f| %>
<div>
  <p>
    <%= f.label :client, "Client"%>
    <%= f.text_field :client%>
  </p>

  <p>
    <%= f.label :quantity%>
    <%= f.number_field :quantity%>
  </p>

  <p>
    <%= f.submit "Create", class:"btn btn-default btn-lg" %>
    <%= link_to "Cancel", book_path(@book.id), class:"btn btn-default btn-lg" %>
  </p>
</div>
<% end %>
